#!/bin/bash

rm -rf basthon-kernel
git clone https://framagit.org/basthon/basthon-kernel.git
pushd basthon-kernel/packages/kernel-python3/src/modules

for package in *; do
  pushd $package
  npm install
  make
  cp dist/*.whl ../../../../../../pyodide/packages/
  popd
done

popd

pushd pyodide/packages/sense_hat
python -m build
cp dist/*.whl ../
rm -rf dist *.egg-info
popd
